<Window xmlns="https://github.com/avaloniaui" MinWidth="500" MinHeight="300">
  <DockPanel LastChildFill="True" Name="Root">
    <Menu DockPanel.Dock="Top" Height="20">
      <MenuItem Header="File">
        <MenuItem Header="Open from file" />
        <MenuItem Header="Open from folder" />
        <MenuItem Header="Close"></MenuItem>
      </MenuItem>
    </Menu>
    <Canvas DockPanel.Dock="Right"></Canvas>

    <ListBox Items="{Binding Generations}" SelectedIndex="{Binding SelectedGeneration, Mode=TwoWay}" DockPanel.Dock="Left" Width="100" BorderThickness="1" />
    <ListBox Items="{Binding Species}" SelectedIndex="{Binding SelectedSpecies, Mode=TwoWay}" DockPanel.Dock="Left" Width="100" BorderThickness="1" Margin="-1,0,0,0" />
    <ListBox Items="{Binding Networks}" SelectedIndex="{Binding SelectedNetwork, Mode=TwoWay}" DockPanel.Dock="Left" Width="100" BorderThickness="1" Margin="-1,0,0,0" />
  </DockPanel>
</Window>